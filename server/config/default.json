{
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 500,
    "max": 1000
  },
  "authentication": {
    "secret": "AUTH_SECRET",
    "strategies": [
      "jwt",
      "local"
    ],
    "path": "/authentication",
    "service": "users",
    "jwt": {
      "header": {
        "typ": "access"
      },
      "audience": "https://cg-trello-clone.now.sh",
      "subject": "auth",
      "issuer": "coding.garden",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "entity": "user",
      "usernameField": "\\username",
      "passwordField": "password"
    }
  },
  "mongodb": "MONGO_DB_URI"
}
